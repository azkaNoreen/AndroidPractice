<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lab18.FileHandling">
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:layout_centerInParent="true"
        ></EditText>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:id="@+id/create"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Folder" />
    <Button
        android:layout_above="@+id/create"
        android:layout_gravity="center|bottom"
        android:id="@+id/createFile"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create File" />
    <Button
        android:layout_above="@+id/createFile"
        android:layout_gravity="center|bottom"
        android:id="@+id/renamFile"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename File" />

</RelativeLayout>